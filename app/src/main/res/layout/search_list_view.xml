<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.00dp"
    android:layout_marginLeft="10.00dp"
    android:layout_marginRight="10.00dp"
    app:cardCornerRadius="5.00dp"
    app:contentPadding="1.00dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dp_image"
            android:layout_width="55.00dp"
            android:layout_height="55.00dp"
            android:layout_marginStart="16.00dp"
            android:layout_marginTop="2.00dp"
            android:layout_marginBottom="2.00dp"
            android:src="@drawable/user_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.00dp"
            android:text="TextView"
            android:textSize="15.00dp"
            app:layout_constraintBottom_toBottomOf="@+id/dp_image"
            app:layout_constraintStart_toEndOf="@+id/dp_image"
            app:layout_constraintTop_toTopOf="@+id/dp_image" />

        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25.00dp"
            android:backgroundTint="@color/click_button_blue"
            android:text="Follow"
            app:layout_constraintBottom_toBottomOf="@+id/dp_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dp_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>