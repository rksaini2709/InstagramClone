<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare permissions, app components, and metadata for the app -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramClone"
        tools:targetApi="31">

        <!-- Define application components such as activities, services, broadcast receivers, and content providers -->

        <!-- Activity for the home screen -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home" />

        <!-- Activity for user login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Activity for user sign up -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />

        <!-- Main activity launched when the app is started -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>